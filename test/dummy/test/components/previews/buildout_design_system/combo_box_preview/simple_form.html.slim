= simple_form_for :user, :url => '/users', id: "test-form" do |f|
  = f.input :select, as: :combo_box, collection: [%w[First first], %w[Second second], %w[Third third], %w[Fourth fourth]], input_html: {'data-nice': "cool" }, prompt: with_blank ? "Please select an option" : nil
  = f.submit "submit me"

javascript:
    document.getElementById("user_select").addEventListener("change", (e) => console.log(e))

    const form = document.getElementById("test-form");
    form.addEventListener("submit", (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const dataForAlert = [...formData].map(formField => `${formField[0]}: ${formField[1]}`).join("\n")
        alert(dataForAlert)
    });