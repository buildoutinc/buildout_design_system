{
  "name": "buildout-design-system",
  "version": "0.1.1",
  "description": "Buildout Design System",
  "private": true,
  "scripts": {
    "build:css:precompile": "sass ./app/assets/stylesheets/application.scss:./public/assets/stylesheets/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./public/assets/application.css --use=autoprefixer --output=./public/assets/application.css",
    "build:css": "yarn build:css:precompile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets --ext scss --exec \"yarn build:css\""
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^5.3.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.5"
  }
}